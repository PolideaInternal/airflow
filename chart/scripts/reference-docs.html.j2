{% macro objectSchema(schema_object) %}
    <p>{{ schema_object.description }}</p>
    {% if schema_object.properties is defined %}
    <b>Properties</b>
    <div class="list-group">
        {% for key, value in schema_object.properties.items() -%}
            <div class="list-group-item">
                <div class="d-flex w-100 justify-content-between align-items-center">
                    <div class="mb-1 font-weight-bold">{{ key }}</div>
                    <span class="badge badge-primary badge-pill">{{ value.type}}</span>
                </div>
                <p class="mb-1">{{ schema(value) }}</p>
            </div>
        {%- endfor %}
    </div>
    {% endif %}
{% endmacro %}

{% macro arraySchema(schema_object) %}
    <p>{{ schema_object.description }}</p>
    {% if schema_object.get('items') %}
        <p>
            Array[
        <ul>
            {% for value in schema_object.items -%}
                <li>{{ schema(value) }}</li>
            {%- endfor %}
        </ul>
        }
        </p>
    {% endif %}
{% endmacro %}

{% macro primarySchema(schema_object) %}
    {% if schema_object.description %}
    <p>{{ schema_object.description }}</p>
    {% endif %}
{% endmacro %}

{% macro schema(schema_object) -%}
    {% if schema_object.type == 'object' %}
        {{ objectSchema(schema_object) }}
    {% elif schema_object.type == 'array' %}
        {{ arraySchema(schema_object) }}
    {% elif schema_object.type == 'integer' %}
        {{ primarySchema(schema_object) }}
    {% elif schema_object.type == 'string' %}
        {{ primarySchema(schema_object) }}
    {% elif schema_object.type == 'boolean' %}
        {{ primarySchema(schema_object) }}
    {% else %}
        <div style="color: red; border: 3px solid red;">
            Unknown type: {{ schema_object.type }}
        </div>
    {% endif %}

{#    {{ schema_object | tojson }}#}
{%- endmacro %}

